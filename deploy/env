# App Settings
API_NAME=MICRO_API # the name of the api
API_PORT=9090 # the port the api will run on
API_HOST=localhost # the host the api will run on
API_VERSION=0.0.9 # the version of the api

# K8 Settings
API_MARK="v1" # for use with k8 deployment
API_NAMESPACE=default # for use with k8 deployment

# Auth Settings
SECRET=secret # the secret used to sign the JWT
TOKEN_EXPIRY=1h # the expiry time of the JWT
TOKEN_ISSUER=micro-api # the issuer of the JWT

# Database Settings
